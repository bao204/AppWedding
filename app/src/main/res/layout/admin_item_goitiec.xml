<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_goiTiec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/Admin_imagePackage"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sanhcuoi1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_fire"/>

                <TextView
                    android:id="@+id/admin_tenPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMBO A"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="start">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="#988984"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/icon_villa"/>

                <TextView
                    android:id="@+id/admin_tenLobbyPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phát"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="start">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_people"
                    android:backgroundTint="#757575"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/admin_soluongLobbyPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100-150"
                    android:textColor="#757575"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách món ăn :"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/admin_tenMonAnPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 món khai vị, 4 món chính, 2 món tráng miệng"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvmenuPackage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroud_textview_white_radius" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách dịch vụ :"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvservicePackage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgroud_textview_white_radius" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>