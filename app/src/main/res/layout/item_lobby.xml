<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/viewGroup_itemLobby">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_goiTiec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ImgLobby"
            android:layout_width="240dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/sanhcuoi1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/viewGroup_littleDetailLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_marginLeft="10dp"
    android:layout_toEndOf="@+id/cardView_goiTiec"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameLobby"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/viewGroup_Gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName_goiTiec"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/ImgGoiTiecA"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="....."
                android:textColor="#171515"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" đ"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon_goiTiec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quận 3"
                android:textSize="14sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvClick_toDetailLobby"
        android:layout_width="158dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/cardView_goiTiec"
        android:background="@drawable/backgroud_radius_bot_hong"
        android:fontFamily="@font/amiko"
        android:gravity="center"
        android:text="Xem chi tiết" />

</RelativeLayout>