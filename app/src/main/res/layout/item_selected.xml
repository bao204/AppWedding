<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_goiTiec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/anhService_selected"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/sanhcuoi1"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/selected_tenService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ten service"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/itemSelected_clickToDetailService"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/backgroud_radius_bot_hong"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="Xem chi tiết" />

            <TextView
                android:id="@+id/clickChoose_selected"
                android:layout_width="55dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:text="Chọn"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/amiko"
                android:background="@drawable/background_radius_grey"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>